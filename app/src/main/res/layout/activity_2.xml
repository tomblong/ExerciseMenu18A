<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bckgrnd">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/menu"
            android:textAlignment="center"
            android:textColor="@color/login"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062" />

        <Button
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:id="@+id/gmbrpersegi"
            android:text="persegi"
            android:background="@drawable/presegi">
        </Button>

        <Button
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/gmbrppanjang"
            android:text="P.Panjang"
            android:background="@drawable/persegipanjang">
        </Button>

        <Button
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/gmbrsegitiga"
            android:text="Segitiga"
            android:background="@drawable/segitiga">
        </Button>


        <Button
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/gmbrlingkaran"
            android:text="Lingkaran"
            android:background="@drawable/lingkaran">
        </Button>

        <Button
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/gmbrtrapesium"
            android:text="Trapesium"
            android:background="@drawable/trapesium">
        </Button>

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>